            <!-- Offcanvas -->
            <!-- Send Invoice Sidebar -->

            <div class="offcanvas offcanvas-end" id="sendInvoiceOffcanvas" aria-hidden="true">
              <div class="offcanvas-header mb-3">
                <h5 class="offcanvas-title">일감등록</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body flex-grow-1">
                <form>
                  <div class="mb-3">
                    <input type="text" class="form-control" id="invoice-from" value="" placeholder="제목을 입력하세요">
                  </div>
                  <div class="col-12">
                    <small class="text-muted d-block mb-2">일감분류</small>
                    <div class="row gy-3 text-nowrap">
                      <div class="col">
                        <div class="form-check custom-option custom-option-basic">
                          <label class="form-check-label custom-option-content py-2" for="customRadioPaypal">
                            <input name="customRadioTemp" class="form-check-input" type="radio" value=""
                              id="customRadioPaypal" checked="">
                            <span class="custom-option-header pb-0">
                              <span>상위일감</span>
                            </span>
                          </label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-check custom-option custom-option-basic checked">
                          <label class="form-check-label custom-option-content py-2" for="customRadioCC">
                            <input name="customRadioTemp" class="form-check-input" type="radio" value=""
                              id="customRadioCC">
                            <span class="custom-option-header pb-0">
                              <span>하위일감</span>
                            </span>
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="invoice-to" class="form-label">담당</label>
                    <input type="text" class="form-control" id="invoice-to" value="qConsolidated@email.com"
                      placeholder="company@email.com">
                  </div>
                  <div class="mb-3">
                    <label for="invoice-to" class="form-label">시　작　일　</label>
                    <input type="date">
                  </div>  
                  <div class="mb-3">
                    <label for="invoice-to" class="form-label">종료예정일　</label>
                    <input type="date">
                  </div>  
                  <div class="mb-3">
                    <label for="invoice-to" class="form-label">우선순위</label>
                    <select name="prioty">
                        <option value="1">높음</option>
                        <option value="2">보통</option>
                        <option value="3">낮음</option>
                    </select>
                  </div>  
                 
                  <div class="mb-3">
                    <label for="invoice-message" class="form-label">내용</label>
                    <textarea class="form-control" name="invoice-message" id="invoice-message" cols="3" rows="8">Dear Queen </textarea>
                  </div>
                  <div class="mb-3">
                    <span class="badge bg-label-primary">
                      <input type="file">
                    </span>
                  </div>
                  <div class="mb-3 d-flex flex-wrap">
                    <button type="button" class="btn btn-primary me-3" data-bs-dismiss="offcanvas">등록</button>
                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="offcanvas">취소</button>
                  </div>
                </form>
              </div>
            </div>
            <!-- /Send Invoice Sidebar -->

            <!-- Add Payment Sidebar -->
            <div class="offcanvas offcanvas-end" id="addPaymentOffcanvas" aria-hidden="true">
              <div class="offcanvas-header mb-3">
                <h5 class="offcanvas-title">Add Payment</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body flex-grow-1">
                <div class="d-flex justify-content-between bg-lighter p-2 mb-3">
                  <p class="mb-0">Invoice Balance:</p>
                  <p class="fw-medium mb-0">$5000.00</p>
                </div>
                <form>
                  <div class="mb-3">
                    <label class="form-label" for="invoiceAmount">Payment Amount</label>
                    <div class="input-group">
                      <span class="input-group-text">$</span>
                      <input type="text" id="invoiceAmount" name="invoiceAmount" class="form-control invoice-amount"
                        placeholder="100">
                    </div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="payment-date">Payment Date</label>
                    <input id="payment-date" class="form-control invoice-date flatpickr-input" type="text"
                      readonly="readonly">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="payment-method">Payment Method</label>
                    <select class="form-select" id="payment-method">
                      <option value="" selected="" disabled="">Select payment method</option>
                      <option value="Cash">Cash</option>
                      <option value="Bank Transfer">Bank Transfer</option>
                      <option value="Debit Card">Debit Card</option>
                      <option value="Credit Card">Credit Card</option>
                      <option value="Paypal">Paypal</option>
                    </select>
                  </div>
                  <div class="mb-4">
                    <label class="form-label" for="payment-note">Internal Payment Note</label>
                    <textarea class="form-control" id="payment-note" rows="2"></textarea>
                  </div>
                  <div class="mb-3 d-flex flex-wrap">
                    <button type="button" class="btn btn-primary me-3" data-bs-dismiss="offcanvas">Send</button>
                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="offcanvas">Cancel</button>
                  </div>
                </form>
              </div>
            </div>
            <!-- /Add Payment Sidebar -->

