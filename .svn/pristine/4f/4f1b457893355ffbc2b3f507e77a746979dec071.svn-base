<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
<!-- 	controller 가 선택할 view 정보 : /definition_name.tiles -->
	
	<definition name="login/*" extends="abstractDef">
		<put-attribute name="content" value="/WEB-INF/views/login/{1}.jsp" />
	</definition>
	
	<definition name="messenger/*" extends="abstractDef">
		<put-attribute name="content" value="/WEB-INF/views/messenger/{1}.jsp" />
	</definition>
</tiles-definitions>       