@Controller
@RequestMapping("/pms/project")
public class ProjectViewController {

	@Inject
	private ProjectService service;
	
	@GetMapping
	public String projectList(Model model) {
		List<ProjectVO> proj = service.selectProjectList("E220401001");
		model.addAttribute("proj", proj);
		System.out.println(proj);
	
	return "pms/project/projectList";
	
	}
	
	@PutMapping
	public String updateProject(@RequestBody ProjectVO  projectVO) {
		
		service.modifyProjectStt(projectVO);
		 
		
		
		return "jsonView";
	}
	 
	
	
	
}


